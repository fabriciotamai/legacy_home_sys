{
  "compilerOptions": {
    "target": "es2016",                                 
    "module": "commonjs",                               
    "baseUrl": "./",                                    
    "paths": {
      "@/*": ["src/*"]                                  
    },
    "outDir": "dist",                                   
    "rootDir": "src",                                   
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,           
    "strict": true,                                     
    "skipLibCheck": true,                               
    "resolveJsonModule": true,                          
    "moduleResolution": "node",                        
    "allowSyntheticDefaultImports": true,              
    "declaration": true,                                
    "declarationMap": true                              
  },
  "include": ["src", "src/types"],                                   
  "exclude": ["node_modules", "dist"]                  
}
